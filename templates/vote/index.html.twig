{% extends 'base.html.twig' %}

{% block title %} Vote{% endblock %}

{% block body %}




    <!------ Include the above in your HEAD tag ---------->
    <h1>Vote index</h1>



    {% for vote in votes %}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-arrow-right"></span>{{ vote.question }} Amount of Likes {{ vote.likes }} <a href="http://www.jquery2dotnet.com" target="_blank"><span
                                    class="glyphicon glyphicon-new-window"></span></a>
                    </h3>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="radio">
                                <label>
                                    {{ vote.option1 }}
                                </label>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="radio">
                                <label>
                                    {{ vote.option2 }}
                                </label>
                            </div>
                        </li>


                    </ul>
                </div>
                <div class="panel-footer text-center">


                    {% if is_granted('ROLE_ADMIN') %}

                        <a href="{{ path('vote_edit', {'id': vote.id}) }}">edit</a>
                    {% endif %}
                    {% block javascripts %}{% endblock %}
                    <a href="{{ path('vote_show', {'id': vote.id}) }}">show</a>

            </div>
        </div>
        </div>
    </div>
</div>
    {% endfor %}
    <a href="{{ path('vote_new') }}">Create new</a>
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

{% endblock %}
